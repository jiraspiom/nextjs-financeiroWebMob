// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Conta {
  id            Int    @id @default(autoincrement())
  nome          String
  saldoAtual    Float  @default(0.0)
  saldoPrevisto Float  @default(0.0)

  receitas              Receita[]
  despesas              Despesa[]
  transferenciasOrigem  Transferencia[] @relation("origemConta")
  transferenciasDestino Transferencia[] @relation("destinoConta")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Despesa {
  id        Int      @id @default(autoincrement())
  descricao String?
  valor     Float
  categoria String
  data      DateTime
  status    Int

  contaId Int
  conta   Conta @relation(fields: [contaId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Receita {
  id        Int      @id @default(autoincrement())
  descricao String?
  valor     Float
  categoria String
  data      DateTime
  status    Int

  contaId Int
  conta   Conta @relation(fields: [contaId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transferencia {
  id        Int      @id @default(autoincrement())
  valor     Float
  descricao String?
  data      DateTime

  origemId  Int
  origem    Conta @relation("origemConta", fields: [origemId], references: [id])
  destinoId Int
  destino   Conta @relation("destinoConta", fields: [destinoId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
